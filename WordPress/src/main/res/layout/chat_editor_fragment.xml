<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_editor_height"
    android:background="?attr/layoutPickerBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mediaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_medium"
        android:textAppearance="?attr/textAppearanceSubtitle2" />

    <ImageButton
        android:id="@+id/attachButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:contentDescription="@string/gutenberg_native_add_image_or_video"
        android:paddingEnd="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:src="@drawable/ic_media_white_24dp"
        android:tint="?attr/colorControlNormal" />

    <EditText
        android:id="@+id/chatEditor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="@string/gutenberg_native_start_writing"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingEnd="@dimen/margin_extra_small"
        android:paddingStart="@dimen/margin_small"
        android:scrollbars="vertical" />

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:contentDescription="@string/gutenberg_native_start_writing"
        android:paddingEnd="@dimen/margin_small"
        android:paddingStart="@dimen/margin_extra_small"
        android:src="@drawable/ic_send_white_24dp"
        android:tint="?attr/colorControlNormal" />
</LinearLayout>
